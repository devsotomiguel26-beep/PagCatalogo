# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Resend (Email notifications)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Application URL (Production or Development)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Flow Payment Gateway (Chile)
# Get your credentials from: https://www.flow.cl/
FLOW_API_KEY=your-flow-api-key
FLOW_SECRET_KEY=your-flow-secret-key
FLOW_SANDBOX=true

# Pricing Configuration
# Price per photo in CLP (Chilean Pesos)
PRICE_PER_PHOTO=2000
