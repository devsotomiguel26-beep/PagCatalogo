# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Resend (Email notifications)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Application URL (Production or Development)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Flow Payment Gateway (Chile)
# Get your credentials from: https://www.flow.cl/
FLOW_API_KEY=your-flow-api-key
FLOW_SECRET_KEY=your-flow-secret-key
FLOW_SANDBOX=true

# Pricing Configuration
# Price per photo in CLP (Chilean Pesos)
PRICE_PER_PHOTO=2000

# Earnings Distribution Configuration
# Percentage splits for revenue distribution (must add up to 100)
DEFAULT_PHOTOGRAPHER_PERCENTAGE=80
DEFAULT_DIRECTOR_PERCENTAGE=20

# Payment gateway fee percentage (Flow's commission including taxes)
# Flow charges approximately 2.89% + IVA â‰ˆ 3.5% total
# This is a default estimate; real fee is captured from Flow webhook
DEFAULT_PAYMENT_GATEWAY_FEE_PERCENTAGE=3.5

# Director Information (for settlements and reports)
DIRECTOR_NAME=Director Academia
DIRECTOR_EMAIL=director@diablosrojoscl.com
